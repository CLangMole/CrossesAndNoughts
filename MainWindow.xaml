<Window x:Class="CrossesAndNoughts.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CrossesAndNoughts"
        mc:Ignorable="d"
        Title="Crosses and Noughts" Height="450" Width="800" Background="LightBlue" SizeChanged="Window_SizeChanged">
    <Grid>
        <Button x:Name="StartButton" Content="Start Game" FontSize="30" Width="250" FontFamily="Impact" Background="CornflowerBlue" Foreground="DarkSlateBlue" HorizontalAlignment="Left"
                    Click="Button_Click" Margin="10,364,0,10" />

        <Button x:Name="QuitButton" Content="Quit" FontSize="30" Width="250" FontFamily="Impact" Background="CornflowerBlue" Foreground="DarkSlateBlue" HorizontalAlignment="Center"
                    Click="QuitButton_Click"  Margin="0,364,0,10" />

        <Button x:Name="RecordsButton" Content="Records" FontSize="30" Width="250" FontFamily="Impact" Background="CornflowerBlue" Foreground="DarkSlateBlue" HorizontalAlignment="Right"
                    Click="RecordsButton_Click" Margin="0,364,10,10" />

        <TextBlock x:Name="Title" Text="Crosses and Noughts" FontFamily="Impact" FontSize="50" Foreground="DarkSlateBlue" TextAlignment="Center" Margin="0,10,0,330" HorizontalAlignment="Center" VerticalAlignment="Top"/>

        <Image Source="D:\Downloads\R5.png" Height="300" Width="300" Margin="250,67,250,67" />

        <Label Visibility="Hidden" x:Name="RecordsLabel" Background="LightBlue" HorizontalAlignment="Center" VerticalAlignment="Center" Height="450" Width="800">
            <DataGrid x:Name="RecordsTable" IsReadOnly="True" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Label>
        
        
    </Grid>
</Window>    